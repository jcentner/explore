/* =============================================================================
   PauseScreen.uss - Styles for the pause menu screen
   ============================================================================= */

/* -----------------------------------------------------------------------------
   Screen Container
   ----------------------------------------------------------------------------- */

.pause-screen {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    
    align-items: center;
    justify-content: center;
}

/* -----------------------------------------------------------------------------
   Overlay Background
   ----------------------------------------------------------------------------- */

.pause-screen__overlay {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    
    background-color: rgba(0, 0, 0, 0.7);
}

/* -----------------------------------------------------------------------------
   Content Panel
   ----------------------------------------------------------------------------- */

.pause-screen__content {
    align-items: center;
    padding: var(--spacing-xxl);
    
    background-color: var(--color-background);
    border-radius: var(--radius-lg);
    border-width: 2px;
    border-color: rgba(255, 255, 255, 0.1);
    
    min-width: 350px;
}

/* -----------------------------------------------------------------------------
   Title
   ----------------------------------------------------------------------------- */

.pause-screen__title {
    font-size: var(--font-size-title);
    -unity-font-style: bold;
    color: var(--color-text);
    
    margin-bottom: var(--spacing-xl);
    letter-spacing: 4px;
}

/* -----------------------------------------------------------------------------
   Button Container
   ----------------------------------------------------------------------------- */

.pause-screen__buttons {
    align-items: stretch;
    width: 100%;
}

/* -----------------------------------------------------------------------------
   Large Button Style (for menu)
   ----------------------------------------------------------------------------- */

.btn--large {
    min-height: 56px;
    min-width: 280px;
    
    margin-bottom: var(--spacing-md);
    padding: var(--spacing-md) var(--spacing-xl);
    
    font-size: var(--font-size-lg);
}

/* -----------------------------------------------------------------------------
   Danger Button (Quit)
   ----------------------------------------------------------------------------- */

.btn--danger {
    background-color: transparent;
    border-color: var(--color-danger);
    color: var(--color-danger);
}

.btn--danger:hover {
    background-color: var(--color-danger);
    color: var(--color-text);
}

.btn--danger:active {
    background-color: #D32F2F;
}

/* -----------------------------------------------------------------------------
   Screen Transitions
   ----------------------------------------------------------------------------- */

.pause-screen.screen--hidden {
    opacity: 0;
    display: none;
}

.pause-screen.screen--visible {
    opacity: 1;
    display: flex;
    
    transition-property: opacity;
    transition-duration: var(--transition-fast);
}
